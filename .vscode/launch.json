{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GNU Radio Python Flowgraph (C++)", // Renamed for clarity
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "program": "/usr/bin/python3.10",
            "args": [
                "/home/gabriel/GNU_Radio_ExpressLRS/synchronization.py"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ]
        }
    ]
}